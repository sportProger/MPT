<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintCombinations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="14dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/index"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="-7dp"
            android:text="n"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cn"
            app:layout_constraintStart_toEndOf="@+id/cn" />

        <TextView
            android:id="@+id/exponent"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-7dp"
            android:text="k"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cn"
            app:layout_constraintTop_toTopOf="@+id/cn" />

        <TextView
            android:id="@+id/textView25"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="="
            app:layout_constraintStart_toEndOf="@+id/cn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cn"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintStart_toEndOf="@+id/textView25"
            app:layout_constraintTop_toTopOf="@+id/textView25">

            <TextView
                android:id="@+id/numerator"
                style="@style/green_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n!"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_line_horizontal_green_88" />

            <TextView
                android:id="@+id/denominator"
                style="@style/green_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(n - k)! * k!"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="="
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout13"
            app:layout_constraintStart_toEndOf="@+id/linearLayout13"
            app:layout_constraintTop_toTopOf="@+id/linearLayout13" />

        <TextView
            android:id="@+id/resForCombinations"
            style="@style/green_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout13"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/linearLayout13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>