<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="clac_button_style">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="example">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="green_example">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="red_example">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="settings_item_style">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="switch_style">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="button_style">
        <item name="android:minWidth">180dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="subtitle_style">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="active_level">
        <item name="android:minHeight">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="gray_text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="rating_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:backgroundTint">#D5E1DA</item>
    </style>

    <style name="card_theme_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>